<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorSurface">#FFFFFF</item>
    </style>

    <style name="RaisedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TextButtonSmall" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="background">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">0dp</item>
        <item name="color">@color/colorPrimaryDark</item>
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonAddCarrinho" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="icon">@drawable/ic_add_shopping_cart_white_24dp</item>
        <item name="iconGravity">start</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">13sp</item>

        <!--        <item name="background">@color/colorPrimary</item>-->
        <!--        <item name="fontFamily">@font/roboto</item>-->
        <!--        <item name="rippleColor">@color/colorPrimaryDark</item>-->
        <!--        <item name="android:textColor">@android:color/white</item>-->
    </style>

</resources>
