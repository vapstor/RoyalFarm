<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="AppTheme.Bridge" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="RaisedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="TextButtonSmall" parent="Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="background">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">0dp</item>
        <item name="color">@color/colorPrimaryDark</item>
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonAddCarrinho" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/btn_carrinho_bg_state_list</item>
        <item name="android:textColor">@color/btn_carrinho_text_state_list</item>
        <item name="iconGravity">start</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ButtonTextWhiteBGAccent" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="SectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>

        <item name="android:textColor">@color/colorPrimary</item>
        <!--        <item name="android:layout_marginLeft">8dp</item>-->
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="SectionSubtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MaterialAnimations" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="CollapseBarCustom">
        <item name="android:shadowColor">@color/colorAccent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="android:textAppearanceButton">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>
</resources>
